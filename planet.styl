.planet
  animation planet-balance 2s infinite alternate ease-in-out
  border-radius 50%
  height 500px
  overflow hidden
  position relative
  transform rotate(15deg)
  width @height
  z-index 5


  .planet-left
  .planet-right
  .planet-center
    height 100%
    position absolute
    top 0
    width 50%

  .planet-left
    left 0
    background-color color-planet-1

  .planet-right
    right 0
    background-color color-planet-2

  .planet-center
    left 50%
    transform translateX(-50%)
    width 20%

  .planet-line
    animation 2s alternate infinite ease-in-out
    background-color #fff
    border-radius @height * 2
    height 4%
    position relative
    left 0
    width 100%

    &:nth-child(1)
      animation-name planet-line-1
      width 60%

    &:nth-child(2)
