.moon
  animation moon 6s infinite ease-in-out
  background-color color-moon-1
  border-radius 50%
  height 200px
  left 50%
  overflow hidden
  position absolute
  //transform translate(-250%, 20%)
  transform translate(-50%, -50%)
  top 50%
  width @height
  z-index: 1


  .moon-lit
    background-color color-moon-2
    border-radius 50%
    height 100%
    right 10%
    position absolute
    top 50%
    transform translateY(-60%)
    width @height

  .moon-crater
    background-color color-moon-1
    border-radius 50%
    position absolute
    height 30%
    right 30%
    top 65%
    width @height

    &:nth-of-type(2)
      height 5%
      right 40%
      top 20%
      width @height

    &:last-of-type
      height 10%
      right 70%
      top 45%
      width @height


@keyframes moon
  from
    height 60px
    width @height
    transform translate(-50%, -50%)
  25%
    transform translate(-250%, 20%)
    z-index 1
  26%
    z-index 10
  50%
    height 250px
    width @height
  75%
    transform translate(150%, -120%)
    z-index 10
  76%
    z-index 1
  to
    height 60px
    width @height
    transform translate(-50%, -50%)